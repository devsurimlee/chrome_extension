{
  "name": "Image Block",
  "description": "간단하게 이미지를 차단합니다.",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "browsingData",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "history",
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/js/content.js"
      ]
    }
  ],
  "icons": {
    "16": "/images/on.png",
    "32": "/images/on.png",
    "48": "/images/on.png",
    "128": "/images/on.png"
  },
  "options_page": "/view/options.html"
}